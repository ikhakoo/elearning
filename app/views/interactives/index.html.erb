<br>
<% color = ['blue', 'orange', 'green', 'red', 'purple', 'teal'] %>
<div class="ui grid">
	<div class="three wide column">
		<%= render 'dashboard/left_sidebar' %>
	</div>
	
	<div class="ten wide column main container">
	<br>
	<div class="ui info message">
	<div class="header">
	Interactive Sessions are available ...
	</div>
	<ul class="list">
		<li>Public Sessions are available to all and Private Sessions are available 24/7 for a fee, please see the pricing chart for more information.</li>
        <li>To Create a new public sessions <%= link_to "click here", new_interactive_path %></li>
        <li>Remember, we only support kobra.io at the moment. We are hoping to add Hangouts soon!</li>
        </ul>
        </div>

			<div class="ui center aligned segment">
			  <%= link_to 'Schedule 10 minutes with TA', new_charge_path, class: "ui button" %>
			  <div class="ui horizontal divider">or</div>
			  <%= link_to 'Schedule 30 minutes with TA', new_charge_path, class: "teal ui button" %>
			</div>

        <div class="ui <%= color.sample %> segment" style="margin-top: 40px; margin-bottom: 40px;">
        
        <h1>Currently

			
			<% if @interactives.length <= 1 %>
				<%= @interactives.length %> public session</h1>
			<% elsif @interactives.length > 1 %>
				<%= @interactives.length %> public sessions</h1>
			<% end %>

			<% if current_user.is_instructor? || current_user.is_admin? %>
				<%= link_to 'Add Room', new_interactive_path, class: "ui button" %>
			<% end %>


		<% @interactives.each do |interactive| %>
			<div class="ui segment">
  			<p><%= interactive.about %></p>
 				<%= link_to 'Go to Room', interactive_path(interactive.id), class: "ui button primary" %><hr />
 				<% if current_user.is_admin? || current_user.is_instructor? %>
					<%= link_to "Edit", edit_interactive_path(interactive), class: "ui button teal" %>
					<%= link_to "Delete", (interactive), method: :delete, data: {confirm: "Are you sure you want to delete this session?"}, class: "ui button red" %>
				<% end %>
				</p>
			</div>
		<% end %>	
	</div>
	<div class="one wide column">
		<%= render 'dashboard/right_sidebar' %>
	</div>
</div>