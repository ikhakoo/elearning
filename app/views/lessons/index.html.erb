<% color = ['blue', 'orange', 'green', 'red', 'purple', 'teal'] %>

<h1>Listing Lessons</h1>

  <% @lessons.each do |lesson| %>
    <div class="pusher">
      <div class="ui grid">
        <div class="two wide column sticky top"></div>
        <div class="nine wide column main container">
        <div class="ui <%= color.sample %> segment" style="margin-top: 40px; margin-bottom: 40px;">
          <div class="ui fluid card">
              <div class="image">
                <h2 style="text-align: center;">
                  <%= lesson.name %>
                </h2>
              </div>
              <div class="content">
                <a class="header">Start Here!</a>
                <div class="description">
                  <%= lesson.description %>
                </div>
              </div>
              <div class="extra content">
                <a>
                  <div class="left-fact">
                    <h4 style="color:black">You Will Learn</h4>
                    <ul>
                      <%= lesson.wl_show.each do |wl| %>
                      <li> <% wl %>
                      <% end %>
                    </ul>
                  </div>
                  <div class="right-fact">
                    <h4 style="color:black">You Will Build</h4>
                    <ul>
                      <%= lesson.wb_show.each do |wb| %>
                      <li> <% wb %>
                      <% end %>
                    </ul>
                  </div>
                </a>
              </div>
            </div>
            <% if current_user.role == 'admin' || current_user.role == 'instructor' %>
          <td><%= link_to 'Show', course_lesson_path(lesson, @course) %></td>
          <td><%= link_to 'Edit', edit_course_lesson_path(lesson, @course) %></td>
          <td><%= link_to 'Destroy', course_lesson_path(@course,lesson), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
            <div class="progress">
              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:14%">
                <span class="sr-only">14% Complete</span>
              </div>
            </div>
        <% end %>
    </div>
  </div>

<br>



<% if current_user.role == 'admin' || current_user.role == 'instructor' %>
  <%= link_to 'New Lesson', new_course_lesson_path(@course) %>
<% end %>
