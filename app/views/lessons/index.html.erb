<%= render 'dashboard/left_sidebar' %>
<% color = ['blue', 'orange', 'green', 'red', 'purple', 'teal'] %>
<div class="pusher">
      <div class="ui grid">
        <div class="one wide column sticky top"></div>
        <div class="ten wide column main container">
        <div class="ui <%= color.sample %> segment" style="margin-top: 40px; margin-bottom: 40px;">
          <% @course.lessons.each do |lesson| %>
          <div class="ui fluid card">
              <div class="image">
                <h2 style="text-align: center;">
                  <%= lesson.name %>
                </h2>
              </div>
              <div class="content">
                <div class="description">
                  <%= lesson.description %>
                </div>
              </div>
              <div class="extra content">
                <a>
                  <div class="left-fact">
                    <h4 style="color:black">You Will Learn</h4>
                    <ul>
                      
                      <% lesson.wl_show.each do |wl| %>
                        <li><%= wl %></li>
                      <% end %>
                    </ul>
                  </div>
                  <div class="right-fact">
                    <h4 style="color:black">You Will Build</h4>
                    <ul>
                      <% lesson.wb_show.each do |wb| %>
                        <li> <%= wb %>
                      <% end %>
                    </ul>
                  </div><hr />
                </a>
              </div>
              <a class="header ui button primary" href="<%= course_lesson_chapters_path(@course, lesson) %>">Start Here!</a>
            </div>
        <% if current_user.role == 'admin' || current_user.role == 'instructor' %>
          <p>
            <%= link_to 'Show', course_lesson_path(@course, lesson), class: "ui button"%>
            <%= link_to 'Edit', edit_course_lesson_path(@course, lesson), class: "ui button" %>
            <%= link_to 'Destroy', course_lesson_path(@course, lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: "ui button" %>
          </p>
        <% end %>
            <!-- <div class="progress">
              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:14%">
                <span class="sr-only">14% Complete</span>
              </div>
            </div> -->
        <% end %>
    </div>
  </div>
  <%= render :partial => 'dashboard/chat'%>
</div>
</div>
