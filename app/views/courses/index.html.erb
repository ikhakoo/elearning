<%= render :partial => 'dashboard/left_sidebar' %>
 <% color = ['blue', 'orange', 'green', 'red', 'purple', 'teal'] %>

<div class="ui three column grid">
  <div class="three wide column"></div>

   <div class="ten wide column">
    <div class="ui <%= color.sample %> segment" style="margin-top: 40px;">

    <% if current_user.is_admin? %>
    <%= link_to 'New Course', new_course_path %>
    <% end %>


      <h2 style="text-align: center; margin-bottom: 20px;">Enroll In a Course</h2>

      <div class="ui two wide centered column grid">


      <% @courses.each do |course| %>
        
        <div class="six wide column">

        <div class="ui cards">
          <div class="card">
            <div class="content">
              <div class="header">
                <%= course.name %>
              </div>
              <div class="description">
                <%= course.description %>
              </div>
              <% if current_user.is_admin? %>
              <br>
              <%= link_to 'Edit Course', edit_course_path(course) %>
              <% end %>
                
            </div> 
            <%= link_to course_path(course) do %>
            <div class="ui bottom attached button">
            <i class="add icon"></i>
              Enroll
            </div>  
            <% end %>      
          </div>
        </div>
      </div>
      <% end %>

      </div>
    </div>
  </div>

  <div class="three wide column"></div>
</div>

