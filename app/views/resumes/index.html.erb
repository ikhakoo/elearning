<div class="ui grid">
  <div class="one wide column">
  <%= render :partial => 'dashboard/left_sidebar' %>
  </div>  
  <div class="fifteen wide column">
    <% if current_user.is_admin? %>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Download Link</th>
          </tr>
        </thead>
        <tbody>
          <% @resumes.each do |resume| %>
            <tr>
              <td><%= resume.first_name %></td>
              <td><%= resume.last_name %></td>
              <td><%= resume.email %></td>
              <td><%= resume.phone %></td>
              <td><%= link_to "Download Resume", resume.attachment_url %></td>
              <td><%= button_to "Delete",  resume, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{resume.first_name}'s resume?" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>ACCESS DENIED</p>
    <% end %>
  </div>
</div>
