<div class="ui grid">
	<div class="one wide column sticky top">
		<%= render :partial => 'left_sidebar' %>
	</div>
	<div class="two wide column sticky top"></div>
	<div class="ten wide column center aligned">
		<h1>User Listing</h1>
		<% if current_user.is_admin? || current_user.is_instructor?	 %>
			<%= form_tag students_path, {method: :get, authentication: false, id: 'search-form'} do %>
				<div class="ui form">
					<i class="search icon"></i>
		      <%= text_field_tag :search, params[:search], :class => "six wide field" %>
		      <%= submit_tag "Search", :class => "ui teal button" %>
		      <%= button_to "Clear", students_path, method: :get, id: "button_to_clear", params: {search: ""}, :class => "ui button" %>
		      <%= button_to "Add Instructor", new_instructor_path, method: :get, id: "button_for_new_instructor", :class => "ui basic button" %>
		    </div>
		    <h3>Filter</h3>
		    <%= check_box_tag :instructors, 1, false %>
				<%= label_tag :instructors_only %>
				<hr />
			<% end %>

			<div id="users_list_handle">
				<%= render :partial => 'users_list', collection: @users, as: :user %>
			</div>
		<% else %>
			<h1>Access Denied</h1>
			<%= link_to 'Home', root_path, class: "ui button" %>
		<% end %>
	</div>
	<div class="one wide column">
			<%= render :partial => 'right_sidebar' %>
	</div>
</div>