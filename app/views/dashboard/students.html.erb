<%= render 'left_sidebar' %>
<div class="pusher">
<div class="ui grid">
<div class="two wide column sticky top"></div>
<div class="ten wide column main container">

<% if current_user.is_admin? %>
<br>
<%= form_tag students_path, {method: :get, authentication: false, id: 'search-form'} do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
<% end %>

<br>

<% @users.each do |user| %>
<div class="ui cards">
  <div class="card">
		<div class="content">
			<div class="header"><%= user.email %></div>
				<div class="description">
					<p>Courses:</p>
					<p><% user.courses.each do |course| %>
					<%= course.name %>
					<% end %></p>
				</div>
			</div>
	</div>
</div>


<% end %>
<% else %>
Access Denied
<% end %>
</div>

<div class="four wide column"></div>
</div>
</div>